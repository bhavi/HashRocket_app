<h2>Subscription Plans</h2>
<table id="subscriptions">
  <tr class = "rows">
    <th>Plan<b> <a id="compare" href ="">(compare plans)</a></b></th>
    <th>Price (USD)</th>

  </tr>      
  <% @plans.each do |plan| %>
   <tr class = "rows">
     <td class= "cols"><%= plan.name %></td>
     <td class= "cols">$<%= plan.price %></td> 
   </tr>
 <% end %>
</table>

<br />

<br />
<%= field_set_tag 'Account Information' do %>
  <p><%= label_tag 'first name' %>
  <%= text_field_tag 'first name' %></p>
  <p><%= label_tag 'last name' %>
  <%= text_field_tag 'last name' %></p>
  <p><%= label_tag 'email' %>
  <%= email_field_tag 'email' %></p>
  <p><%= label_tag 'user name' %>
  <%= text_field_tag 'user name' %></p>
  <p><%= label_tag 'password' %>
  <%= text_field_tag 'password' %></p>

  <div><%= label_tag 'sign me up for:' %>
  <%= check_box_tag 'monthly letters'%>
  <%= label_tag 'monthly letters'%>
  <%= check_box_tag 'special offer notifications'%>
  <%= label_tag 'special offer notifications'%>
  <%= submit_tag "Continue >>"%></div>
<% end %>
